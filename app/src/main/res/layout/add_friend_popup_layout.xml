<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:id="@+id/popup_element"
    android:layout_marginBottom="@dimen/_10sdp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPopUpBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/_15sdp"
    android:paddingBottom="@dimen/_20sdp"
    app:cardCornerRadius="@dimen/_20sdp">

    <LinearLayout
        android:id="@+id/linearLayout13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline54">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_10sdp">


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="end"
                android:background="@color/colorGreenViewSeparator" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/popup_sms_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="onDelAccClicked"
                    android:text="SMS"
                    android:textColor="@color/colorTextBlue"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="end"
                android:background="@color/colorGreenViewSeparator" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/popup_email_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="70"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="onLogoutClicked"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="Email"
                    android:textColor="@color/colorTextBlue"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="end"
                android:background="@color/colorGreenViewSeparator" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/popup_copylnk_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="onAboutUsClicked"
                    android:text="Copy Link"
                    android:textColor="@color/colorTextBlue"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="end"
                android:background="@color/colorGreenViewSeparator" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_weight="100"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/popup_cancel_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="onAboutUsClicked"
                    android:text="Cancel"
                    android:textColor="@color/colorTextRedLight"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>