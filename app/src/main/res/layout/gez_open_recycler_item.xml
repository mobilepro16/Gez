<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingEnd="5dp">

        <ImageView
            android:id="@+id/gez_open_frnd_pic"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/profile_demo" />


        <RadioGroup
            android:id="@+id/gez_open_emoji_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp"
            app:layout_collapseMode="parallax">

            <RadioButton
                android:id="@+id/item_emoji_opn_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@drawable/emoji_selector_1" />

            <RadioButton
                android:id="@+id/item_emoji_opn_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@drawable/emoji_selector_2" />

            <RadioButton
                android:id="@+id/item_emoji_opn_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@drawable/emoji_selector_3" />

            <RadioButton
                android:id="@+id/item_emoji_opn_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@drawable/emoji_selector_4" />

            <RadioButton
                android:id="@+id/item_emoji_opn_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@drawable/emoji_selector_5" />

            <RadioButton
                android:id="@+id/item_emoji_opn_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@drawable/emoji_selector_6" />
        </RadioGroup>
    </LinearLayout>
</android.support.v7.widget.CardView>